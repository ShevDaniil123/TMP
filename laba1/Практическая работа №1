@startuml
left to right direction
skinparam packageStyle rect
actor Пациент
actor Регистратура
actor Врач
rectangle Поликлиника {
  Пациент-- (Посещение врача)
  Пациент-- (Получение платных услуг)
  Пациент-- (Регистрация страхового полиса)
  Пациент-- (Получить талон)
  Пациент-- (Оформить карту пациента)
  Пациент-- (Регистрация больничного листа)
  Регистратура-- (Записать на прием)
  Регистратура -- (Оформить карту пациента)
  Регистратура -- (Счет за платные услуги)
  Регистратура-- (Регистрация страхового полиса)
  Регистратура-- (Регистрация больничного листа)
  Врач-- (Учет факта приема)
  Врач-- (Назначить лечение)
  Врач-- (Занести информацию в личную карту)
  Врач-- (Направить на анализы)
  (Посещение врача) -> (Учет факта приема)
  (Получение платных услуг) -> (Счет за платные услуги) : Платёж
  (Получить талон) -> (Записать на прием)
  (Учет факта приема) -> (Занести информацию в личную карту)
}
@enduml
