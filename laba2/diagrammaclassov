@startuml "Поликлиника"
left to right direction

class Пациент{
    ФИО : string
    Паспортные_данные : string
    Медицинская_карта : varchar
    Больничеый_лист
    Страховой_полис
    Болеть()
    Записаться_на_прием()
    Посетить_врача()
    Получение_платных_услуг()
    Регистрация_страхового_полиса()
    Получить_талон()
    Оформить_карту_пациента()
}

class Врач{
    +ФИО: string
    +Кабинет_приёма integer
    +Специализация string
    +Лечить()
    +Вести_историю_болезней
    +Консультировать()
}

class Медкарта{
    +Номер_карты:integer
    +ФИО_больного:string
    +Диагноз: string
    +Записать_состояние_пациента()
    +Завести_медкарту()
    +Снять_с_учёта()
}

Пациент -- Медкарта: > прикреплён к поликлинике
Врач -- Медкарта: ведёт > 
Пациент -- Врач: < лечит
@enduml
